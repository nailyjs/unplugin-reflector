{
  "compilerOptions": {
    "target": "ES2017",
    "jsx": "react",
    "lib": [
      "ES2017",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "noEmitOnError": false,
    "outDir": "lib",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
